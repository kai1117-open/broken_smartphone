<header class="mystery-header">
<h1><%= link_to '割れたスマホ', root_path, class: "home-link" %></h1>
</header>

<div class="menu">
  <%= link_to '拾ったスマホへ', broken_smartphone_top_path, class: 'menu-link' %>
  <%= link_to '連絡サイトへ', line_page_top_path, class: 'menu-link' %>
  <%= link_to '検索サイトへ', google_page_top_path, class: 'menu-link' %>
  <%= link_to '掲示板サイトへ', bakusai_top_path, class: 'menu-link' %>
</div>
<div class="menu mt-5">
<% if current_user.progress_level <= 3 %>
<%= render "home/progress_story/progress_1" %>
<% elsif current_user.progress_level <= 8 %>
<%= render "home/progress_story/progress_2" %>
<% elsif current_user.progress_level <= 10 %>
<%= render "home/progress_story/progress_3" %>
<% elsif current_user.progress_level <= 13 %>
<%= render "home/progress_story/progress_4"%>
<% end %>
</div>
<footer class="footer">
<p>&copy; 2025 Broken Smartphone</p>
</footer>
<style>

.home-link {
  text-decoration: none; /* 下線を消す */
  color: #ffffff; /* 白文字 */
  transition: color 0.3s ease-in-out;
}

.mystery-header {
  text-align: center;
  padding: 20px 20px;
  background: linear-gradient(to right, #1a1a1a, #000000);
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.8);
  border-bottom: 2px solid #333;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
}

.mystery-header h1 {
    font-size: 2.5rem;
    font-weight: bold;
    text-shadow: 2px 2px 5px rgba(255, 0, 0, 0.7);
    letter-spacing: 3px;
}


body, html {
  height: 100%;
  margin: 0;
  font-family: 'Cinzel', serif; /* ミステリアスな雰囲気を演出するセリフ体 */
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #eee;
}

/* メニューコンテナ */
.menu {
  display: flex;
  flex-direction: column;
  gap: 20px;
  padding: 30px 40px;
  background: rgba(0, 0, 0, 0.6); /* 半透明のダークな背景 */
  border: 1px solid #444;
  border-radius: 10px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
}

/* リンク（ボタン風） */
.menu-link {
  font-size: 24px;
  text-decoration: none;
  color: #fefefe;
  padding: 10px 20px;
  border: 2px solid #fefefe;
  border-radius: 5px;
  transition: background 0.3s, color 0.3s;
  text-shadow: 1px 1px 3px #000;
  text-align: center;
}

.menu-link:hover {
  background: #fefefe;
  color: #222;
}

/* 背景のぼかし */
body::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url('/assets/pakusnIMG_9573.jpg') no-repeat center center/cover;
  filter: blur(5px);
  z-index: -1;
}

/* 追加する画像（オーバーレイ） */
body::after {
  content: "";
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200%;
  height: 200%;
  background: url('/assets/372681.png') no-repeat center center/contain;
  z-index: -1;
  opacity: 0.8;
}


.footer {
    z-index: 1000;
    background: linear-gradient(to right, #1a1a1a, #000000);
    text-align: center;
    padding: 20px;
    margin-top: 50px;
    border-top: 1px solid #333;
    font-size: 14px;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}
</style>