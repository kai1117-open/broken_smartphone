<h2 class="text-center">ログイン</h2>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-group") do |f| %>
            <%= devise_error_messages! %>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", autofocus: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="text-center">
              <%= f.submit "ログイン", class: "btn btn-success" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= link_to "パスワードを忘れた方はこちら", new_user_password_path %><br>
            <%= link_to "新規登録はこちら", new_user_registration_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
