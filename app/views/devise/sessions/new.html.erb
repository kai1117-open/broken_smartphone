<header class="mystery-header">
<h1><%= link_to '割れたスマホ', root_path, class: "home-link" %></h1>
</header>
<div class="container text-center ">
<h2 class="text-center mb-3">ログイン</h2>


    <div class="row justify-content-center">

        <div class="card">
          <div class="card-body text-black">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-group") do |f| %>
              <%= devise_error_messages! %>

              <div class="mb-3">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, class: "form-control", autofocus: true %>
              </div>

              <div class="mb-3">
                <%= f.label :password, class: "form-label" %>
                <%= f.password_field :password, class: "form-control" %>
              </div>

              <div class="text-center">
                <%= f.submit "ログイン", class: "btn btn-success" %>
              </div>
            <% end %>

            <div class="text-center mt-3">
              <%= link_to "新規登録はこちら", new_user_registration_path %>
            </div>
          </div>
        </div>
      </div>

  </div>


<footer class="footer">
<p>&copy; 2025 Broken Smartphone</p>
</footer>
<style>
.home-link {
  text-decoration: none; /* 下線を消す */
  color: #ffffff; /* 白文字 */
  transition: color 0.3s ease-in-out;
}

.mystery-header {
    text-align: center;
    padding: 20px 20px;
    background: linear-gradient(to right, #1a1a1a, #000000);
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.8);
    border-bottom: 2px solid #333;
}

.mystery-header h1 {
    font-size: 2.5rem;
    font-weight: bold;
    text-shadow: 2px 2px 5px rgba(255, 0, 0, 0.7);
    letter-spacing: 3px;
}

body {
    display: flex;
    flex-direction: column;
    background-image: url('https://www.pakutaso.com/20231159311post-49222.html');
    color: #e0e0e0;
    font-family: 'Arial', sans-serif;
    min-height: 100vh;
    margin: 0;
    position: relative;
    overflow-y: auto; /* スクロールを可能にする */
}


/* 背景のぼかし */
body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('/assets/pakusnIMG_9573.jpg') no-repeat center center/cover;
    filter: blur(5px);
    z-index: -1;
}

/* 追加する画像 */
body::after {
    content: "";
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200%;
    height: 200%;
    background: url('/assets/372681.png') no-repeat center center/contain;
    z-index: -1;
    opacity: 0.8;
}

.container {
    max-width: 800px;
    margin: 50px auto;
    background: #1e1e1e;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0px 0px 15px rgba(255, 0, 0, 0.2);
}

.footer {
    z-index: 1000;
    background: linear-gradient(to right, #1a1a1a, #000000);
    text-align: center;
    padding: 20px;
    margin-top: 50px;
    border-top: 1px solid #333;
    font-size: 14px;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}
</style>