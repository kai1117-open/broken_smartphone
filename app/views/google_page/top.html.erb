<h1 class="logo">
<span class="c">C</span>
<span class="o1">o</span>
<span class="o2">o</span>
<span class="g">g</span>
<span class="l">l</span>
<span class="e">e</span>
</h1>

<div class="search-box">
<%= form_with url: google_page_index_path, method: :get, local: true, class: "search-form" do %>
<input type="text" name="q" placeholder="Coogle で検索または URL を入力">
<button type="submit" class="search-btn">
    <img src="https://www.google.com/images/icons/material/system/2x/search_grey600_24dp.png" width="20" alt="検索">
</button>
<% end %>
</div>

<div class="shortcut-icons">
<img src="https://www.google.com/favicon.ico" alt="Google">
<img src="https://upload.wikimedia.org/wikipedia/commons/c/c2/F_icon.svg" alt="Facebook" width="50">
<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a5/Instagram_icon.png/512px-Instagram_icon.png" alt="Instagram">
<img src="https://upload.wikimedia.org/wikipedia/commons/4/41/LINE_logo.svg" alt="LINE" width="50">
</div>

<div class="container mt-4">
  <h2 class="mb-3">閲覧履歴</h2>
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th scope="col">記事タイトル</th>
        <th scope="col">リンク</th>
      </tr>
    </thead>
    <tbody>
    <% pages = {
      1 => { title: "片町経営者10選インタビュー記事", path: google_page_page_1_path },
      2 => { title: "闇の財産？噂のビルを調査してみた", path: google_page_page_2_path },
      3 => { title: "東京の夜景を独占取材！", path: google_page_page_3_path },
      4 => { title: "隠れ家レストランの秘密", path: google_page_page_4_path },
      5 => { title: "最新ガジェット徹底解説", path: google_page_page_5_path },
      6 => { title: "未来の都市計画を探る", path: google_page_page_6_path },
      7 => { title: "伝統と革新の融合、京都の魅力", path: google_page_page_7_path },
      8 => { title: "話題のスポーツ選手の素顔に迫る", path: google_page_page_8_path },
      9 => { title: "経済の未来を読む", path: google_page_page_9_path },
      10 => { title: "国際情勢の裏側を暴く", path: google_page_page_10_path },
      11 => { title: "IT業界の革命児にインタビュー", path: google_page_page_11_path }
    } %>
    
    <% pages.each do |page_number, page_info| %>
      <% if current_user.google.send("page_#{page_number}?") %>
        <tr>
          <td><%= page_info[:title] %></td>
          <td>
            <%= link_to '記事を読む', page_info[:path], class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    <% end %>
    
    </tbody>
  </table>
</div>



<div class="dash text-center mt-3 mb-3">
<%= link_to 'ダッシュボードへ', home_dashboard_path, class: 'btn btn-primary' %>
</div>
