<main class="main-content">
  <h1>児童相談所-お問い合わせフォーム</h1>
  <p class="form-notice">※個人を誹謗中傷する内容はご遠慮ください</p>

  <form id="quizForm" class="contact-form">
    <div class="form-group">
      <label for="name">被害を受けている方のフルネーム</label>
      <input type="text" id="name" required placeholder="性と名の間にスペースはいりません">
    </div>

    <div class="form-group">
      <label for="age">被害を受けている方の年齢</label>
      <input type="text" id="age" placeholder="半角数字のみで入力してください">
    </div>

    <div class="form-group">
      <label for="mother">その方の母親のフルネーム</label>
      <input type="text" id="mother" required placeholder="性と名の間にスペースはいりません">
    </div>

    <div class="form-group">
      <label for="father">その方の父親のフルネーム</label>
      <input type="text" id="father" placeholder="性と名の間にスペースはいりません">
    </div>

    <div class="form-group">
      <label for="school">被害を受けている方が通っている小学校の名前</label>
      <input type="text" id="school" placeholder="例）○○小学校">
    </div>

    <div class="form-group">
      <label for="message">ネグレクトの内容</label>
      <textarea id="message" rows="3" required placeholder="ネグレクトの内容をご記入ください。"></textarea>
    </div>

    <div class="form-submit">
      <button type="submit">送信</button>
    </div>
  </form>
</main>

<div class="d-flex justify-content-center align-items-center" style="margin-top: 2em;">
  <a href="javascript:history.back()" class="btn">戻る</a>
</div>
<script>
  document.getElementById("quizForm").addEventListener("submit", function (e) {
    e.preventDefault();

    const name = document.getElementById("name").value.trim();
    const age = document.getElementById("age").value.trim();
    const mother = document.getElementById("mother").value.trim();
    const father = document.getElementById("father").value.trim();
    const school = document.getElementById("school").value.trim();
    const neglect = document.getElementById("message").value.trim();

    const correctAnswers = {
      name: "米松喜一",
      age: "12",
      mother: "米松茉莉",
      father: "米松文也",
      school: "野崎山小学校",
      neglect: "いつも同じ汚れた服を着ており、季節に合わない服装でいることが多く、特に寒い冬の日でも薄着のまま外を歩いているのをよく見かけます。また、明らかにお腹を空かせている様子で、近所のコンビニやスーパーで食べ物をねだっている姿を何度も見たことがあります。夜遅くになっても一人で外にいることがあり、これまで保護者の姿をほとんど見かけたことがありません。以前、その子が「おうちに誰もいない」「ごはんは自分で食べる」と話しているのを耳にしたこともあり、家庭内で適切な世話がなされていないのではないかと考えられます"
    };

    let isAllCorrect = (
      name === correctAnswers.name &&
      age === correctAnswers.age &&
      mother === correctAnswers.mother &&
      father === correctAnswers.father &&
      school === correctAnswers.school &&
      neglect === correctAnswers.neglect
    );

    if (isAllCorrect) {
      alert("正解です！トップページへ移動します。");
      window.location.href = "<%= google_page_page_5_path %>"; // ← 遷移先を必要に応じて変更
    } else {
      alert("どこかが間違っています。もう一度確認してください。");
    }
  });
</script>
